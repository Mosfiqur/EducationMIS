<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/save_menu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16sp"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0sp"
    android:elevation="15sp"
    app:cardCornerRadius="15sp"
    app:cardElevation="15sp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/bottom_sheet_close_iv"
            android:layout_width="24sp"
            android:layout_height="24sp"
            android:layout_alignParentRight="true"
            android:layout_margin="8sp"
            android:src="@drawable/ic_close_black_24dp"
            app:tint="@color/green"/>
        <View
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="0.1sp"
            android:background="@color/green"
            android:layout_below="@id/bottom_sheet_close_iv"
            android:layout_marginRight="4sp"
            android:layout_marginLeft="4sp"/>
        <RelativeLayout
            android:id="@+id/layer1"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_margin="4sp"
            android:layout_below="@id/divider1">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8sp"
                android:text="@string/save_exit"
                android:textColor="@color/green"
                android:textSize="18sp"/>
        </RelativeLayout>

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="0.1sp"
            android:background="@color/green"
            android:layout_below="@id/layer1"
            android:layout_marginRight="4sp"
            android:layout_marginLeft="4sp"/>

        <RelativeLayout
            android:id="@+id/layer2"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_margin="4sp"
            android:layout_below="@id/divider2">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8sp"
                android:text="@string/submit_it_to_supervisor"
                android:textColor="@color/green"
                android:textSize="18sp"/>
        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>